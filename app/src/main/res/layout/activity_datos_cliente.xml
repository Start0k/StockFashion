<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_datos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7ED">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerDatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón volver -->
        <LinearLayout
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_left"

                android:contentDescription="Volver"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:textSize="14sp"
                android:textColor="#FFEDD5"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_user"

                android:contentDescription="Cliente"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtTituloDatos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos del Cliente"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completa la información de entrega"
                    android:textSize="13sp"
                    android:textColor="#FFFBEB"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:id="@+id/scrollContentDatos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerDatos"
        app:layout_constraintBottom_toTopOf="@id/bottomBarDatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Resumen productos -->
            <LinearLayout
                android:id="@+id/cardResumenProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/bg_card"
                android:elevation="3dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Productos en la orden"
                        android:textColor="#4B5563"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/txtCantidadProductos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_badge_orange"/>
                </LinearLayout>
            </LinearLayout>

            <!-- CARD: Información personal -->
            <LinearLayout
                android:id="@+id/cardInfoPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:elevation="3dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="#F97316"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información Personal"
                        android:textColor="#374151"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Nombre completo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre completo *"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etNombreCliente"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input"
                        android:hint="Ingresa tu nombre completo"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"/>
                </LinearLayout>

                <!-- RUT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUT *"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etRutCliente"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input"
                        android:hint="12.345.678-9"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"/>
                </LinearLayout>

                <!-- Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono *"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etTelefonoCliente"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input"
                        android:inputType="phone"
                        android:hint="+56 9 1234 5678"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"/>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etEmailCliente"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input"
                        android:inputType="textEmailAddress"
                        android:hint="tu@email.com"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"/>
                </LinearLayout>
            </LinearLayout>

            <!-- CARD: Dirección de entrega -->
            <LinearLayout
                android:id="@+id/cardDireccionEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:elevation="3dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="#F97316"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección de Entrega"
                        android:textColor="#374151"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Dirección -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección *"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etDireccionCliente"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input"
                        android:hint="Calle, número, depto"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"/>
                </LinearLayout>

                <!-- Región -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Región *"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spRegion"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input"/>
                </LinearLayout>

                <!-- Comuna -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comuna *"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spComuna"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input"/>
                </LinearLayout>

                <!-- Notas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notas adicionales"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etNotasCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:gravity="top|start"
                        android:background="@drawable/bg_input"
                        android:hint="Información adicional para la entrega..."
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="10dp"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Campos obligatorios"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- BARRA INFERIOR -->
    <LinearLayout
        android:id="@+id/bottomBarDatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnFinalizarVenta"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Finalizar Venta"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#F97316"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
