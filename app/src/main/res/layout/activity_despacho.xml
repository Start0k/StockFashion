<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7ED">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono (equivalente a <Package />) -->
        <ImageView
            android:id="@+id/imgPackage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_package"

            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orden de Despacho"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/txtSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona tus productos"
                android:textSize="13sp"
                android:textColor="#FFFBEB"/>
        </LinearLayout>

    </LinearLayout>

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CARD: Configurar Producto -->
            <LinearLayout
                android:id="@+id/cardConfigProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="#F97316"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configurar Producto"
                        android:textColor="#374151"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Marca -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marca del producto"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spMarca"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner" />
                </LinearLayout>

                <!-- Tipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de producto"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spTipo"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner" />
                </LinearLayout>

                <!-- Talla -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talla"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spTalla"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner" />
                </LinearLayout>

                <!-- Nombre / Modelo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del producto"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spNombre"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad a despachar"
                        android:textColor="#4B5563"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etCantidadDespacho"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input"
                        android:inputType="number"
                        android:hint="Ej: 1"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"/>

                </LinearLayout>



                <!-- Botón Agregar -->
                <Button
                    android:id="@+id/btnAgregarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Agregar a la orden"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#F97316"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <!-- CARD: Lista de productos -->
            <LinearLayout
                android:id="@+id/cardListaProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="#F97316"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/txtTituloProductos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productos (0)"
                        android:textColor="#374151"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Estado vacío -->
                <LinearLayout
                    android:id="@+id/layoutEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_package"

                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay productos agregados"
                        android:textSize="13sp"
                        android:textColor="#9CA3AF"/>
                </LinearLayout>

                <!-- Lista de productos (para usar con RecyclerView) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BARRA INFERIOR FIJA -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnConfirmarOrden"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Confirmar Orden"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#F97316"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
