<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- HEADER (equivalente al sticky top con Package + textos) -->
    <LinearLayout
        android:id="@+id/headerInventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono redondo negro con Package dentro -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#111827"
            android:foregroundGravity="center"
            android:layout_marginEnd="12dp"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imgPackage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_package"

                android:contentDescription="StockFashion"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtTituloApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StockFashion"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <TextView
                android:id="@+id/txtSubtituloApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingreso de Ropa"
                android:textSize="14sp"
                android:textColor="#4B5563"/>
        </LinearLayout>
    </LinearLayout>

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:id="@+id/scrollInventory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerInventory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CARD: Formulario de ingreso (equivalente a InventoryForm) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#4B5563"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etNombre1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:hint="Ej: Camiseta Básica"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:textColorHint="#9CA3AF"/>
            </LinearLayout>

            <!-- Spinner: Marca -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca"
                    android:textColor="#4B5563"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/spMarca1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"/>
            </LinearLayout>

            <!-- Spinner: Tipo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo"
                    android:textColor="#4B5563"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/spTipo1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"/>
            </LinearLayout>

            <!-- Spinner: Talla -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talla"
                    android:textColor="#4B5563"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/spTalla1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"/>
            </LinearLayout>

            <!-- Spinner: Cantidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:textColor="#4B5563"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etCantidad1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:hint="0"
                    android:inputType="number"
                    android:paddingStart="12dp"/>

            </LinearLayout>



            <!-- Botón agregar -->
            <Button
                android:id="@+id/btnAgregarItem"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Agregar prenda"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#111827"/>


            <!-- Separación -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- CARD: Lista de inventario (equivalente a InventoryList) -->
            <LinearLayout
                android:id="@+id/cardListaInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/txtTituloLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventario"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginBottom="8dp"/>

                <!-- Aquí va tu lista (RecyclerView) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInventario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>