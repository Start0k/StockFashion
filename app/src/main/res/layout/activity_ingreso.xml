<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- ... (Tu código de cabecera se mantiene igual) ... -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECCIÓN NOMBRE (EditText) - VA PRIMERO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etNombre"
                android:hint="Ej: Camiseta Estampada"
                android:inputType="textCapWords"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"/>


            <!-- SECCIÓN MARCA (Spinner) -->

            <!-- ... resto de los spinners (Marca, Tipo, Talla) ... -->


            <!-- SECCIÓN MARCA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <!-- Reemplazamos etMarca con spinnerMarca -->
            <Spinner
                android:id="@+id/spinnerMarca"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>


            <!-- SECCIÓN TIPO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <!-- Reemplazamos etTipo con spinnerTipo -->
            <Spinner
                android:id="@+id/spinnerTipo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>


            <!-- SECCIÓN TALLA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talla"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <!-- Reemplazamos etTalla con spinnerTalla -->
            <Spinner
                android:id="@+id/spinnerTalla"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>


            <!-- SECCIÓN CANTIDAD (Este sí se queda como EditText) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etCantidad"
                android:hint="0"
                android:inputType="number"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"/>

            <!-- ... (El resto del botón y recycler se mantiene igual) ... -->

            <Button
                android:id="@+id/btnAgregar"
                android:text="Agregar"
                android:layout_marginTop="24dp"
                android:backgroundTint="#111827"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tblIngresoProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
