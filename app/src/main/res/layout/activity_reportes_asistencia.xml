<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".ReportesAsistencia">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnVolverReporte"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="#374151" />
        <!-- Si no tienes arrow_back, usa cualquier icono o vector -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reportes de Asistencia"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Selector de Usuario -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Empleado"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Spinner para cargar la lista de usuarios -->
            <Spinner
                android:id="@+id/spinnerUsuarios"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_background"
                />
            <!-- Si no tienes border_background, se verá por defecto -->

            <Button
                android:id="@+id/btnGenerarReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generar Reporte"
                android:backgroundTint="#2563EB"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Área del Reporte -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:id="@+id/layoutResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tvEstadoReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione un usuario para ver su historial."
                android:textAlignment="center"
                android:textColor="#9CA3AF"
                android:layout_marginTop="40dp"/>

            <!-- Aquí se insertarán dinámicamente las filas del reporte -->

        </LinearLayout>
    </ScrollView>

    <!-- Botón Imprimir (Simulado) -->
    <Button
        android:id="@+id/btnImprimirPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exportar / Imprimir"
        android:layout_margin="16dp"
        android:backgroundTint="#4B5563"
        android:enabled="false"/>

</LinearLayout>
