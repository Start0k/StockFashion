<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"> <!-- Cambia el color de fondo si quieres -->

    <!-- Tu Logo -->
    <ImageView
        android:id="@+id/logoSplash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher" />
    <!-- CAMBIA @drawable/ic_launcher_foreground POR TU PROPIO LOGO -->

    <!-- Texto opcional abajo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoSplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="StockFashion"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

</RelativeLayout>
